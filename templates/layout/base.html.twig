<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block headTitle %}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('site') }}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <div id="site">
        {% apply spaceless %}
            {% block siteHeader %}
            <header id="main">
                <a href="{{ path('app_default_index') }}" title="{{ 'home.anchor.alt' | trans }}" class="home">
                    <img src="{{ resources_url ~ 'images/logo.bf5afcc7.png' }}" alt="{{ 'home.anchor.image' | trans }}" width="250" height="100">
                </a>
            </header>

            {% block mainMenu %}{% endblock %}

            <div id="main-content">
                {% block contentHeader %}
                <header id="content">
                    {% block breadcrumb %}
                    {{ breadcrumb(breadcrumb) }}
                    {% endblock %}
                    <h1>{% block pageTitle %}{% endblock %}</h1>
                </header>
                {% endblock %}

                {% block body %}{% endblock %}
            </div>

            {% endblock %}
        {% endapply %}
        </div>
    </body>
</html>
